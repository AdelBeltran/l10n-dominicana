        <field name="name">Document Pools</field>
        <field name="res_model">l10n_latam.document.pool</field>
        <field name="domain">['|', ('active', '=', True), ('active', '=', False)]</field>
        <field name="context">{"search_default_active":1}</field>
    </record> -->

    <menuitem action="action_document_pool" id="menu_document_type" sequence="21" parent="account.account_account_menu"/> />

</odoo>
