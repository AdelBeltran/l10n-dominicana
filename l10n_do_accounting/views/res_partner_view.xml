<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base_view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.placeholders.l10n_cl.form</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <field name="street2" position="attributes">
                <attribute name="placeholder">Datos adic. direcci√≥n y Ciudad</attribute>
            </field>
            <field name="city" position="attributes">
                <attribute name="attrs">{'placeholder': 'Zona'}</attribute>
            </field>
            <field name="state_id" position="attributes">
                <attribute name="placeholder">Ciudad</attribute>
            </field>
            <field name="vat" position="after">
                <field name="l10n_do_dgii_tax_payer_type" attrs="{'readonly': [('parent_id', '!=', False)]}" placeholder="Tax Payer Type" />
            </field>
            <group name="purchase" position ="inside">
                <field name="expense_type"/>
            </group>
        </field>
    </record>
</odoo>