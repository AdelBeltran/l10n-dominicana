<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="web_address_layout_inherited" inherit_id="web.address_layout">
        <xpath expr="//t[@t-if='address']" position="attributes">
            <attribute name="t-if">doc_model != "account.move"</attribute>
        </xpath>
    </template>

    <template id="report_invoice_document_inherited" inherit_id="l10n_latam_invoice_document.report_invoice_document">

        <t t-set="ecf_representation" t-value="o.env.context.get('ecf_representation')"/>

        <!-- l10n do invoices does not have this fields -->
        <xpath expr="//span[@t-field='o.l10n_latam_document_type_id.report_name']" position="replace"/>
        <xpath expr="//span[@t-field='o.l10n_latam_document_number']" position="replace"/>

        <xpath expr="//h2" position="after">
            <div class="row">
                <div id="informations" class="col-6">
                    <strong>
                        <span t-field="o.company_id.partner_id.name"/>
                    </strong>
                    <br/>
                    <span>
                        <strong>RNC:</strong>
                        <span t-field="o.company_id.vat"/>
                    </span>
                    <br/>
                    <span>
                        <strong>Fecha:</strong>
                        <span t-field="o.invoice_date"/>
                    </span>
                    <br/>
                    <span t-if="o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted'">
                        <strong>Vence:</strong>
                        <span t-field="o.invoice_date_due"/>
                    </span>
                </div>
                <div id="informations" class="col-6">
                    <h2>
                        <span t-field="o.l10n_latam_document_type_id.report_name"/>
                    </h2>
                    <strong>
                        <t t-if="o.is_ecf_invoice">e-NCF: </t>
                        <t t-else="">NCF: </t>
                    </strong>
                    <span t-field="o.l10n_latam_document_number"/>
                    <br/>
                    <span t-if="(o.type == 'out_refund' or o.type == 'in_refund' or o.is_debit_note) and (o.l10n_do_origin_ncf != False)">
                        <strong>NCF modificado:</strong>
                        <span t-field="o.l10n_do_origin_ncf"/>
                        <t t-if="ecf_representation">
                            <strong>Código Modificación:</strong>
                            <span t-field="o.l10n_do_ecf_modification_code"/>
                        </t>
                        <br/>
                    </span>
                    <span id="fiscal_exp_date"
                          t-if="(o.type in ['out_invoice', 'out_refund'] and not o.is_ecf_invoice)
                          or (o.is_ecf_invoice and o.l10n_latam_document_type_id.doc_code_prefix[1:] not in ('32', '34'))
                          and o.state == 'posted'">
                        <strong>
                            <t t-if="o.is_ecf_invoice">Vencimiento e-NCF: </t>
                            <t t-else="">Válida hasta: </t>
                        </strong>
                        <span>31/12/2020</span>
                        <!-- <span t-field="o.ncf_expiration_date"/> --></span>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[@id='informations']/div[@name='due_date']" position="replace"/>
        <xpath expr="//div[hasclass('page')]//div[@id='informations']/div[@name='reference']/p[1]" position="attributes">
            <attribute name="t-field">o.name</attribute>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[@id='informations']/div[@name='invoice_date']" position="before">
            <div class="col-auto mw-100 mb-2" t-if="o.partner_id.vat" name="invoice_partner_address">
                <t t-if="len(o.partner_id.vat) == 9">
                    <strong>RNC:</strong>
                    <span class="m-0" t-field="o.partner_id.vat"/>
                    <br/>
                    <strong>Razón Social:</strong>
                    <t t-if="o.partner_id.parent_id">
                        <span class="m-0" t-field="o.partner_id.parent_id.name"/>
                        <br/>
                        <strong>Contacto:</strong>
                        <Span t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.parent_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.parent_id.phone"/>
                            <t t-if="o.partner_id.parent_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.parent_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.parent_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <t t-else="">
                        <span class="m-0" t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <t t-if="o.partner_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <br/>
                </t>
                <t t-elif="len(o.partner_id.vat) == 11">
                    <strong>Cédula:</strong>
                    <span class="m-0" t-field="o.partner_id.vat"/>
                    <br/>
                    <strong>Nombre:</strong>
                    <t t-if="o.partner_id.parent_id">
                        <span class="m-0" t-field="o.partner_id.parent_id.name"/>
                        <br/>
                        <strong>Contacto:</strong>
                        <Span t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.parent_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.parent_id.phone"/>
                            <t t-if="o.partner_id.parent_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.parent_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.parent_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <t t-else="">
                        <span class="m-0" t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <t t-if="o.partner_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.mobile">
                            <strong>CEL.:</strong>
                            <span t-field="o.partner_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <br/>
                </t>
                <t t-else="">
                    <t t-if="o.partner_id.vat">
                        <strong>ID Cliente:</strong>
                        <span class="m-0" t-field="o.partner_id.vat"/>
                    </t>
                    <br/>
                    <strong>Nombre:</strong>
                    <t t-if="o.partner_id.parent_id">
                        <span class="m-0" t-field="o.partner_id.parent_id.name"/>
                        <br/>
                        <strong>Contacto:</strong>
                        <Span t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.parent_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.parent_id.phone"/>
                            <t t-if="o.partner_id.parent_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.parent_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.parent_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <t t-else="">
                        <span class="m-0" t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <t t-if="o.partner_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <br/>
                </t>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.partner_id.vat == False" name="invoice_partner_address">
                <t>
                    <strong>Nombre:</strong>
                    <t t-if="o.partner_id.parent_id">
                        <span class="m-0" t-field="o.partner_id.parent_id.name"/>
                        <br/>
                        <strong>Contacto:</strong>
                        <Span t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.parent_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.parent_id.phone"/>
                            <t t-if="o.partner_id.parent_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.parent_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.parent_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <t t-else="">
                        <span class="m-0" t-field="o.partner_id.name"/>
                        <br/>
                        <t t-if="o.partner_id.phone">
                            <strong>Tel.:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <t t-if="o.partner_id.mobile">
                                <span> / </span>
                            </t>
                        </t>
                        <t t-if="o.partner_id.mobile">
                            <strong>Cel.:</strong>
                            <span t-field="o.partner_id.mobile" widget="phone"/>
                        </t>
                    </t>
                    <br/>
                </t>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.partner_id.street" name="client_address">
                <strong>Dirección cliente:</strong>
                <p class="m-0" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
            </div>
        </xpath>
        <xpath expr="//table[hasclass('o_main_table')]/tbody//td[hasclass('o_price_total')]" position="inside">
            <t t-if="any([t for t in line.tax_ids if t.amount == 0.0])">
                <span>
                    <strong>E</strong>
                </span>
            </t>
        </xpath>
        <xpath expr="/t/t/div/div[3]/div[1]/div/table/t[1]/tr/t[2]/td[1]/span[2]" position="replace"/>
        <xpath expr="//div[@id='total']" position="after">
            <div class="text-muted text-right">
                <span>
                    <strong>Original:</strong>
                    Cliente
                </span>
                <br/>
                <span>
                    <strong>Copia:</strong>
                    Vendedor
                </span>
                <br/>
                <br/>
            </div>
        </xpath>
        <xpath expr="//th[@name='th_price_unit']" position="after">
            <th t-if="display_discount and ecf_representation"
                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <span>Monto descuento</span>
            </th>
        </xpath>
        <xpath expr="//td[@t-if='display_discount']" position="after">
            <td t-if="display_discount and ecf_representation" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <t t-set="price_unit_wo_discount" t-value="line.price_unit * (1 - (line.discount / 100.0))"/>
                <t t-set="discount_amount" t-value="abs(round(price_unit_wo_discount - line.price_subtotal, 2))"/>
                <span class="text-nowrap" t-esc="discount_amount"/>
            </td>
        </xpath>
    </template>
</odoo>