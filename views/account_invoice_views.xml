<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="invoice_supplier_tree_inherited" model="ir.ui.view">
        <field name="name">invoice.supplier.tree.inherited</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="report_status" widget="state_selection" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_form_inherited" model="ir.ui.view">
        <field name="name">invoice.form.inherited</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="dgii_fields" string="DGII">
                    <group>
                        <group>
                            <field name="withholded_itbis"/>
                            <field name="income_withholding"/>
                            <field name="selective_tax"/>
                            <field name="other_taxes"/>
                            <field name="legal_tip"/>
                            <field name="service_total_amount"/>
                            <field name="payment_date"/>
                        </group>
                        <group>
                            <field name="good_total_amount"/>
                            <!--<field name="cost_itbis"/>-->
                            <!--<field name="advance_itbis"/>-->
                            <field name="isr_withholding_type"/>
                            <field name="payment_form"/>
                            <field name="invoiced_itbis"/>
                            <field name="third_withheld_itbis"/>
                            <field name="third_income_withholding"/>
                            <field name="proportionality_tax"/>
                            <field name="cost_itbis"/>
                            <field name="advance_itbis"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="invoice_supplier_form_inherited" model="ir.ui.view">
        <field name="name">invoice.supplier.form.inherited</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="before">
                <field name="is_exterior" invisible="1"/>
                <field name="service_type" attrs="{'invisible': [('is_exterior', '=', False)], 'required': True}"/>
                <field name="service_type_detail" options="{'no_create': True, 'no_open': True}"
                       attrs="{'invisible': [('is_exterior', '=', False)], 'readonly': [('service_type', '=', False)], 'required': [('service_type', '!=', False)]}"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="dgii_fields" string="DGII">
                    <group>
                        <group>
                            <field name="withholded_itbis"/>
                            <field name="income_withholding"/>
                            <field name="selective_tax"/>
                            <field name="other_taxes"/>
                            <field name="legal_tip"/>
                            <field name="service_total_amount"/>
                            <field name="payment_date"/>
                            <field name="report_status" widget="state_selection" readonly="1"/>
                        </group>
                        <group>
                            <field name="good_total_amount"/>
                            <!--<field name="cost_itbis"/>-->
                            <!--<field name="advance_itbis"/>-->
                            <field name="isr_withholding_type"/>
                            <field name="payment_form"/>
                            <field name="invoiced_itbis"/>
                            <field name="third_withheld_itbis"/>
                            <field name="third_income_withholding"/>
                            <field name="proportionality_tax"/>
                            <field name="cost_itbis"/>
                            <field name="advance_itbis"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>